<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nautilus-actions-config version="0.1">
  <action name="newaction">
    <test>
      <basename>*</basename>
      <isfile>TRUE</isfile>
      <isdir>TRUE</isdir>
      <accept-multiple-files>TRUE</accept-multiple-files>
      <scheme>
        <type>file</type>
        <type>sftp</type>
        <type>smb</type>
        <type>ftp</type>
        <type>dav</type>
      </scheme>
    </test>
    <command>
      <path>/usr/bin/nautilus-actions-config</path>
      <parameters/>
    </command>
    <menu-item>
      <label>New Action...</label>
      <tooltip>Create a new action using NACT</tooltip>
    </menu-item>
  </action>
</nautilus-actions-config>
